---
import { navItems } from '../lib/navItems.js';
---

<footer class="bg-white text-center py-8">
  <div class="container mx-auto px-4">
    <a href="/" class="flex mx-auto items-center mb-8 justify-center">
      <div class="w-10 h-10 border flex items-center justify-center rounded-full">
        <img src="/favicon.svg" alt="Logo" />
      </div>
      <span class="text-xl ml-4 font-bold text-black">RGESN Tracker</span>
    </a>
    <nav class="flex justify-center space-x-8 mb-4">
      {navItems.map((item) => (
        <a
          href={item.href.startsWith("#") && new URL(Astro.request.url).pathname !== "/" ? `/${item.href}` : item.href}
          class="text-gray-600 hover:text-primary transition-colors"
        >
          {item.text}
        </a>
      ))}
    </nav>
    <hr class="my-4 border-gray-200" />
    <div class="text-sm text-gray-500">
      © {new Date().getFullYear()} Green–id. Tous les droits sont réservés.
    </div>
    <div class="flex justify-center space-x-4 mt-4 text-sm">
      <a href="/terms" class="text-gray-600 hover:text-primary transition-colors">
        Mentions légales
      </a>
    </div>
  </div>
</footer>
